    <build>
        <!--定义插件版本-->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>2.8.1</version>
                </plugin>
                <!--pmd静态代码检查,mvn -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-pmd-plugin</artifactId>
                    <version>3.0.1</version>
                </plugin>
                <!--findbugs静态代码检查,mvn findbugs:findbugs -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>findbugs-maven-plugin</artifactId>
                    <version>3.0.1</version>
                    <configuration>
                        <findbugsXmlOutput>true</findbugsXmlOutput>
                        <xmlOutput>true</xmlOutput>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                    </executions>
                    <dependencies>
                        <!-- hotswap-->
                        <dependency>
                            <groupId>org.springframework</groupId>
                            <artifactId>springloaded</artifactId>
                            <version>1.2.4.RELEASE</version>
                        </dependency>
                    </dependencies>
                    <configuration>
                        <!--不生成可执行的jar包-->
                        <executable>false</executable>
                        <!--生成jar包时排出devTools-->
                        <excludeDevtools>true</excludeDevtools>
                        <mainClass>${start-class}</mainClass>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <!--检查依赖中是否有相同的类，如果有，提示警告，可能会因为类加载顺序不一致导致不可预期的行为-->
            <plugin>
                <groupId>com.yiji.maven</groupId>
                <artifactId>yiji-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>checkDuplicateDependency</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <optimize>true</optimize>
                    <compilerArgument>-parameters</compilerArgument>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>${deploy.skip}</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
            </plugin>
            <!-- 检查依赖 参考 http://maven.apache.org/enforcer/enforcer-rules/index.html
            传递依赖检查源代码被修改为只检查易极付的依赖
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.3.1.global</version>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <!-- 因为snet环境通过maven-tomcat-plugin运行，它在LifecyclePhase.PROCESS_CLASSES阶段运行，修改phase为compile，提前发现问题-->
                        <phase>compile</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>1.8</version>
                                </requireJavaVersion>
                                <!--禁用某些依赖-->
                                <bannedDependencies>
                                    <!--是否检查传递性依赖(间接依赖)-->
                                    <searchTransitive>true</searchTransitive>
                                    <excludes>
                                        <exclude>org.slf4j:slf4j-log4j12</exclude>
                                        <exclude>com.global:global-util</exclude>
                                        <exclued>org.apache.cxf:cxf-rt-transports-http-jetty</exclued>
                                        <exclued>javax.servlet:javax.servlet-api</exclued>
                                        <exclued>com.yjf.security.phprpc:phprpc</exclued>
                                        <exclued>com.alibaba:dubbo</exclued>
                                        <exclued>com.alibaba:druid</exclued>
                                        <exclued>com.yiji.postman:postman-api-sdk</exclued>
